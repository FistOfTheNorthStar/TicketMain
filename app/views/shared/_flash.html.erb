<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="<%= name == 'notice' ? 'bg-green-100 border-green-400 text-green-700' : 'bg-red-100 border-red-400 text-red-700' %> px-4 py-3 rounded relative mx-auto max-w-md mt-4" role="alert">
      <span class="block sm:inline"><%= msg %></span>
    </div>
  <% end %>
<% end %>
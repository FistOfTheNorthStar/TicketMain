<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <div class="text-center">
        <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
          Please wait!
        </h2>
        <div data-controller="queue-status" data-queue-status-reservation-id="<%= @reservation.id %>">
          <div data-queue-status-target="status">Pending</div>
        </div>
        <div data-controller="expiration" data-expiration-minutes="<%= ShareVariablesConstantsRegex::PAYMENT_JOB_EXPIRES %>">
          <div class="mt-2 text-sm text-gray-500">
            Expires in: <span class="inline-block text-black font-bold" data-expiration-target="expires">5:00</span>
          </div>
        </div>
        <div class="mt-4">
          <div class="relative">
            <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-blue-200">
              <div class="animate-pulse shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-blue-500"
                   style="width: 100%"></div>
            </div>
          </div>
        </div>
        <p class="mt-2 text-sm text-gray-500">
          Please don't close this window. We'll automatically redirect you when done.
        </p>
      </div>
    </div>
  </div>
</div>
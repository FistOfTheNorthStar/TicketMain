<div class="max-w-md mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white rounded-xl shadow-lg p-6">
    <h1 class="text-2xl font-bold mb-6">Reserve Tickets</h1>

    <%= render 'shared/flash' %>

    <%= form_with(
          model: [@concert, @reservation],
          url: concert_reservations_path(@reservation),
          method: :post,
          local: true
        ) do |f| %>
      <% if @reservation.errors.any? %>
        <div class="mb-4 p-4 bg-red-50 text-red-600 rounded-lg">
          <h2><%= pluralize(@reservation.errors.count, "error") %> prohibited this reservation from being saved:</h2>
          <ul class="list-disc list-inside">
            <% @reservation.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <label class="block text-gray-700 font-semibold mb-2">Concert</label>
        <p class="text-gray-600"><%= @concert.name %></p>
      </div>

      <div class="mb-6">
        <%= f.label :quantity, class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.number_field :quantity, in: 1..@concert.available_tickets, class: "w-full p-2 border rounded-lg" %>
      </div>

      <div class="mb-4">
        <p class="text-gray-600">
          Price per ticket: $<%= @concert.price %><br>
          Available tickets: <%= @concert.available_tickets %>
        </p>
      </div>
      <%= f.hidden_field :reservation_id, value: @reservation.id %>
      <%= f.submit "Complete Reservation", class: "w-full py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700" %>
    <% end %>
  </div>
</div>
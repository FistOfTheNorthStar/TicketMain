<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <h1 class="text-3xl font-bold mb-8">Upcoming Concerts</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @concerts.each do |concert| %>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <%= image_tag "concert_default.jpg", class: "w-full h-48 object-cover" %>

        <div class="p-6">
          <h2 class="text-xl font-bold mb-2"><%= concert.name %></h2>
          <p class="text-gray-600 mb-4"><%= concert.description %></p>

          <div class="flex justify-between items-center">
            <span class="text-blue-600 font-bold">$<%= concert.price %></span>
            <span class="text-gray-500"><%= concert.available_tickets %> tickets left</span>
          </div>

          <%= link_to "View Details", concert_path(concert), class: "mt-4 block w-full text-center bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700" %>
        </div>
      </div>
    <% end %>
  </div>
</div>